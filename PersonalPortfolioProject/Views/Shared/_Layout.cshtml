    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <div style="position:relative">
        <footer class="border-top text-muted" style="position: sticky; bottom: 0; width: 100%">
            <div class="container">
                &copy; 2023 - Personal Portfolio -
                <a href="#home" class="text-secondary">Home</a> @* <a asp-area="" asp-controller="Home" asp-action="Index">Home</a> *@
            </div>
        </footer>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
