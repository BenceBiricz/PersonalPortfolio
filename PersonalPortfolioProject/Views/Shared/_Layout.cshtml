    <title>Personal Portfolio</title>
    <link rel="icon" type="image/x-icon" href="/images/eclipse-removebg-preview.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PersonalPortfolioProject.styles.css" asp-append-version="true" />
